{% extends 'base.html.twig' %}

{% block title %}Patients{% endblock %}

{% block body %}
    <h1>Patients</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ patient.id }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ patient.lastname }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ patient.firstname }}</td>
            </tr>
            <tr>
                <th>BirthDate</th>
                <td>{{ patient.birthDate ? patient.birthDate|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ patient.email }}</td>
            </tr>
            <tr>
                <th>VitalcardNumber</th>
                <td>{{ patient.vitalcardNumber }}</td>
            </tr>
        </tbody>
    </table>

    <div class="row">
        <div class="col">
            <a class="btn btn-primary" title="Modifier le patient" href="{{ path('patients_edit', {'id': patient.id}) }}">Modifier le patient</a>
        </div>
        <div class="col text-end">
            {{ include('patients/_delete_form.html.twig') }}
        </div>
    </div>
    

    

   

    
{% endblock %}
