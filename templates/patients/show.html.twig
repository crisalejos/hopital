{% extends 'base.html.twig' %}

{% block title %}Patients{% endblock %}

{% block body %}
    <h1>Patients</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ patient.id }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ patient.lastname }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ patient.firstname }}</td>
            </tr>
            <tr>
                <th>BirthDate</th>
                <td>{{ patient.birthDate ? patient.birthDate|date('d-m-Y') : '' }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ patient.email }}</td>
            </tr>
            <tr>
                <th>VitalcardNumber</th>
                <td>{{ patient.vitalcardNumber }}</td>
            </tr>
        </tbody>
    </table>

    <a  title="Voir la liste des patients" href="{{ path('patients_index') }}">Voir la liste des patients</a>

    <a title="Modifier le patient" href="{{ path('patients_edit', {'id': patient.id}) }}">Modifier le patient</a>

   

    {{ include('patients/_delete_form.html.twig') }}
{% endblock %}
