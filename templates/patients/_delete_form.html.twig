<form method="post" action="{{ path('patients_delete', {'id': patient.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce patient ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ patient.id) }}">
    <button class="btn btn-secondary"><i class="fal fa-trash-alt"></i> Supprimer</button>
</form>
