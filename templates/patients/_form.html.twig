<div class="form-control">
{{ form_start(form) }}
    <div class="my-custom-class-for-errors">
        {{ form_errors(form) }}
    </div>

    <div class="row m-3">
        <div class="col-md-6">
            {{ form_row(form.firstname) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.lastname) }}
        </div>
    </div>
    <div class="row m-3">
        <div class="col-md-6">
            {{ form_row(form.email) }}
        </div>
        <div class="col-md-6">
            {{ form_row(form.vitalcardNumber) }}
        </div>
    </div>
    <div class="row m-3">
        <div class="col-md-12">
            {{ form_row(form.birthDate) }}
        </div>
        
    </div>
    <div class="row mt-3 mb-3 text-end">
        <div class="col-md-12">
           <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
        </div>
        
    </div>
    
    
{{ form_end(form) }}
</div>



